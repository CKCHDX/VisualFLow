<Window x:Class="VisualFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VisualFlow"
        Title="VisualFlow - Main Window" Height="800" Width="1000">

    <Grid>
        <!-- TabControl to hold UIPage and FunctionPage as tabs -->
        <TabControl>
            <!-- UIPage Tab -->
            <TabItem Header="UI Page">
                <local:UIPage />
                <!-- Embedding the UIPage UserControl directly -->
            </TabItem>

            <!-- FunctionPage Tab -->
            <TabItem Header="Function Page">
                <local:FunctionPage />
                <!-- Embedding the FunctionPage UserControl -->
            </TabItem>
        </TabControl>
    </Grid>
</Window>
